<h1>Snippets</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Author</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% if (viewData?.snippets?.length) { %>
      <% for (const snippet of viewData.snippets) { %>
        <tr>
          <td class="snippet-author-table">
            <%= snippet.author %>
          </td>
          <td class="snippet-description-table">
            <%= snippet.description %>
          </td>
          <td class="snippet-action-table">
            <a href="./snippets/<%= snippet.id %>/update">Update</a>
            <a href="./snippets/<%= snippet.id %>/delete">Delete</a>
          </td>
        </tr>
      <% } %>
    <% } else { %>
      <tr>
        <td class="text-center text-danger">
          There are no snippets to display
        </td>
      </tr>
    <% } %>
  </tbody>
</table>